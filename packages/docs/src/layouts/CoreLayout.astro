---
import BaseLayout, { Props as BaseLayoutProps } from './BaseLayout.astro';
import Sidebar from '../components/sidebar.astro';
import Logo from '../components/logo.astro';
import GithubIcon from '../components/icons/github-icon.astro';
import NpmIcon from '../components/icons/npm-icon.astro';

export type Props = BaseLayoutProps;

const {
  title,
  article,
  class: className,
  ...attrs
} = Astro.props;
---

<BaseLayout title={title} article={article} class="flex flex-col md:flex-row">
  <Sidebar class="flex-initial justify-between md:h-[100vh] md:sticky top-0 left-0 z-10">
    <a href="/">
      <Logo class="h-10 w-10 transition-transform hover:scale-110" />
    </a>
    <div class="flex md:flex-col gap-2">
      <a class="hover:bg-gray-300 dark:hover:bg-gray-700 p-2 rounded-full" href="https://www.npmjs.com/package/blinkdb"><NpmIcon class="h-6 w-6" /></a>
      <a class="hover:bg-gray-300 dark:hover:bg-gray-700 p-2 rounded-full" href="https://github.com/blinkdb-js/blinkdb"><GithubIcon class="h-6 w-6" /></a>
    </div>
  </Sidebar>
  <div class:list={["flex-auto", className]} {...attrs}>
    <slot />
  </div>
</BaseLayout>