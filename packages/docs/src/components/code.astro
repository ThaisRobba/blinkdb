---
import { Code } from "astro/components";
import type * as shiki from 'shiki';

export interface Props extends astroHTML.JSX.HTMLAttributes {
  title?: string;
  code: string;
  lang: shiki.Lang;
  theme?: shiki.IThemeRegistration;
}

const { title, code, lang, theme, class: className, ...attrs } = Astro.props;
---

<div class:list={["code bg-[#1b1e28] font-mono rounded-xl text-sm overflow-hidden", className]} {...attrs}>
  <div class="flex-auto border-b border-slate-700 p-3 flex items-center justify-between gap-2">
    {title ? <span class="text-xs text-slate-300">{title}</span> : null}
    <div class="flex gap-2">
      <div class="bg-slate-600 w-1.5 h-1.5 rounded-full"></div>
      <div class="bg-slate-600 w-1.5 h-1.5 rounded-full"></div>
      <div class="bg-slate-600 w-1.5 h-1.5 rounded-full"></div>
    </div>
  </div>
  <Code
    code={code}
    lang={lang}
    theme={theme}
  />
</div>

<style is:global>
  .code pre {
    @apply px-4 py-3;
  }

  .code code {
    counter-reset: step;
    counter-increment: step 0;
  }

  .code code .line::before {
    content: counter(step);
    counter-increment: step;
    width: 1rem;
    margin-right: 1.5rem;
    display: inline-block;
    text-align: right;
    color: rgba(115,138,148,.4)
  }
</style>