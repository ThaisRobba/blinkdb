---
export interface Props extends astroHTML.JSX.HTMLAttributes {};

const { class: className, ...attrs } = Astro.props;
---

<div class:list={[
  "bg-gray-100 dark:bg-gray-800",
  "backdrop-blur bg-opacity-70",
  "p-3 md:pb-5",
  "flex md:flex-col items-center",
  className
]} {...attrs}>
  <slot />
</div>
