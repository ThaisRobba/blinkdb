---
export interface Props extends astroHTML.JSX.HTMLAttributes {
  light?: boolean;
};

const { light, class: className, ...attrs } = Astro.props;
---

<div class:list={[
  light ? "" : "bg-zinc-100",
  "p-2 sm:p-3 sm:pt-4 sm:pb-5",
  "flex sm:flex-col items-center",
  className
]} {...attrs}>
  <slot />
</div>
