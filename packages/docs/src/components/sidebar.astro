---
export interface Props extends astroHTML.JSX.HTMLAttributes {
  light?: boolean;
};

const { light, class: className, ...attrs } = Astro.props;
---

<div class:list={[
  light ? "dark:bg-gray-900" : "bg-gray-100 dark:bg-gray-800",
  "p-3 md:pb-5",
  "flex md:flex-col items-center",
  className
]} {...attrs}>
  <slot />
</div>
